<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--Steel Tree-->
    <ThingDef ParentName="TreeBase">
        <defName>PlantZoneSteel</defName>
        <label>Steel Tree</label>
        <description>A tree that can be harvested for Steel.</description>
        <graphicData>
            <texPath>Things/Plant/Steel_Tree</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Beauty>-1</Beauty>
        </statBases>
        <plant>
            <growDays>10</growDays>
            <harvestedThingDef>Steel</harvestedThingDef>
            <harvestYield>25</harvestYield>
            <sowMinSkill>5</sowMinSkill>
            <visualSizeRange>
                <min>1.3</min>
                <max>2.4</max>
            </visualSizeRange>
        </plant>
    </ThingDef>

